<!DOCTYPE html>
<html>
    <head>
        <title>Sign-In</title>
        {{> imports_header}}
    </head>
    <body>
        {{> navbar}}
        <div class="main-content">
            <h1>Sign-In Page</h1>

            {{#if err}}
                <div class="alert alert-danger">
                    {{err}}
                </div>
            {{/if}}

            <form method="POST" action="/auth/signin/local">
                <label>Email</label>
                <input type="text" name="email"/><br>
                <label>Password</label>
                <input type="password" name="password"/><br>

                <button>Sign In</button>
            </form>

            <br><br>

            <form method="POST" action="/auth/signin/google" >
                <button><i class="fab fa-google"></i> Sign In</button>
            </form>
        </div>
        
        {{> imports_footer}}
    </body>
</html>